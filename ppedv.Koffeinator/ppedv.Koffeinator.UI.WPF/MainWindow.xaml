<Window x:Class="ppedv.Koffeinator.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ppedv.Koffeinator.UI.WPF"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:ppedv.Koffeinator.UI.WPF.Views"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Exit"></MenuItem>
        </Menu>
        <StatusBar Height="22" DockPanel.Dock="Bottom" Background="MediumSlateBlue"/>
        <TabControl>
            <TabItem Header="Rezepte">
                <views:KaffeeRezeptView/>
            </TabItem>
            <TabItem Header="Machinen">
                <views:KaffeeMachinenView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
